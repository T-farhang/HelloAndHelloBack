<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.totia.test.SenderActivity"
    android:orientation="vertical"
    android:background="#97f0ee">

    <TextView
        android:id="@+id/tvActivity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnSendeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Hello Message"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvHelloBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_gravity="center"
        android:textColor="#1b006b"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"/>

</LinearLayout>
